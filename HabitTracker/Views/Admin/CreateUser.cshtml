@model HabitTracker.Models.User
@{
    Layout = null;
}
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
    }
</style>

<div class="min-h-screen bg-gray-100 flex items-center justify-center p-6">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Yeni Kullanıcı Oluştur ➕</h2>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-100 text-red-700 p-3 rounded mb-4 text-sm border-l-4 border-red-500">@ViewBag.Error</div>
        }

        <form method="post" class="space-y-4">
            <div>
                <label class="block text-sm font-bold text-gray-700">Kullanıcı Adı</label>
                <input type="text" name="Username" required class="w-full border p-3 rounded-lg mt-1 focus:ring-2 focus:ring-blue-500 outline-none transition">
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-700">Email</label>
                <input type="email" name="Email" required class="w-full border p-3 rounded-lg mt-1 focus:ring-2 focus:ring-blue-500 outline-none transition">
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-700">Şifre</label>
                <input type="password" name="PasswordHash" required class="w-full border p-3 rounded-lg mt-1 focus:ring-2 focus:ring-blue-500 outline-none transition">
            </div>
            <div>
                <label class="block text-sm font-bold text-gray-700">Rol</label>
                <select name="Role" class="w-full border p-3 rounded-lg mt-1 bg-white cursor-pointer">
                    <option value="User">User (Standart)</option>
                    <option value="Admin">Admin (Yönetici)</option>
                </select>
            </div>

            <div class="flex space-x-3 pt-4">
                <a href="/Admin/Index" class="w-1/3 bg-gray-200 text-gray-700 py-3 rounded-lg text-center font-bold hover:bg-gray-300 transition">İptal</a>
                <button type="submit" class="w-2/3 bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition shadow-lg shadow-blue-500/30">Oluştur</button>
            </div>
        </form>
    </div>
</div>