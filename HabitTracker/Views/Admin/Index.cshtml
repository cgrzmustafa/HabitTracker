@model HabitTracker.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Paneli";
    Layout = null;
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
<script src="https://cdn.tailwindcss.com"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }
</style>

<div class="flex h-screen bg-gray-100">

    <div class="w-64 bg-gray-900 text-white flex flex-col shadow-2xl flex-shrink-0">
        <div class="p-6 flex items-center space-x-3 border-b border-gray-800">
            <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-xl font-bold">
                <i class="fa-solid fa-shield-halved"></i>
            </div>
            <div>
                <h1 class="text-lg font-bold">Yönetim</h1>
                <p class="text-xs text-gray-400">Admin Paneli</p>
            </div>
        </div>

        <nav class="flex-1 p-4 space-y-2">
            <button onclick="showTab('dashboard')" id="btn-dashboard" class="w-full flex items-center space-x-3 px-4 py-3 bg-blue-600 rounded-xl text-white shadow-lg transition text-left">
                <i class="fa-solid fa-chart-pie w-6"></i>
                <span>Dashboard</span>
            </button>
            <button onclick="showTab('users')" id="btn-users" class="w-full flex items-center space-x-3 px-4 py-3 text-gray-400 hover:bg-gray-800 hover:text-white rounded-xl transition text-left">
                <i class="fa-solid fa-users w-6"></i>
                <span>Kullanıcılar</span>
            </button>
            <button onclick="showTab('habits')" id="btn-habits" class="w-full flex items-center space-x-3 px-4 py-3 text-gray-400 hover:bg-gray-800 hover:text-white rounded-xl transition text-left">
                <i class="fa-solid fa-list-check w-6"></i>
                <span>Alışkanlıklar</span>
            </button>

            <a href="/Home/Index" class="flex items-center space-x-3 px-4 py-3 text-gray-400 hover:bg-gray-800 hover:text-white rounded-xl transition mt-4">
                <i class="fa-solid fa-house w-6"></i>
                <span>Siteye Dön</span>
            </a>
            <a href="/Account/Logout" class="flex items-center space-x-3 px-4 py-3 text-red-400 hover:bg-red-500/10 rounded-xl transition mt-auto">
                <i class="fa-solid fa-right-from-bracket w-6"></i>
                <span>Çıkış Yap</span>
            </a>
        </nav>
    </div>

    <div class="flex-1 overflow-y-auto bg-gray-50">

        <header class="bg-white shadow-sm p-6 flex justify-between items-center sticky top-0 z-10">
            <h2 class="text-2xl font-bold text-gray-800">Kontrol Merkezi</h2>
            <div class="flex items-center space-x-3">
                <div class="flex items-center space-x-2 bg-green-50 text-green-700 px-3 py-1 rounded-full border border-green-200 text-xs font-bold">
                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                    <span>Sistem Online</span>
                </div>
            </div>
        </header>

        <div class="p-8">

            <div id="tab-dashboard" class="block animate-fade-in space-y-6">

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between">
                        <div>
                            <p class="text-sm text-gray-500 font-medium">Toplam Üye</p>
                            <h3 class="text-3xl font-bold text-gray-800">@ViewBag.TotalUsers</h3>
                        </div>
                        <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xl"><i class="fa-solid fa-users"></i></div>
                    </div>
                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between">
                        <div>
                            <p class="text-sm text-gray-500 font-medium">Alışkanlıklar</p>
                            <h3 class="text-3xl font-bold text-gray-800">@ViewBag.TotalHabits</h3>
                        </div>
                        <div class="w-12 h-12 bg-purple-100 text-purple-600 rounded-full flex items-center justify-center text-xl"><i class="fa-solid fa-rocket"></i></div>
                    </div>
                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between">
                        <div>
                            <p class="text-sm text-gray-500 font-medium">Tamamlanan</p>
                            <h3 class="text-3xl font-bold text-gray-800">@ViewBag.TotalCompletions</h3>
                        </div>
                        <div class="w-12 h-12 bg-green-100 text-green-600 rounded-full flex items-center justify-center text-xl"><i class="fa-solid fa-check-double"></i></div>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <div class="lg:col-span-2 bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">📈 Yeni Üye Analizi (Son 7 Gün)</h3>
                        <div class="h-64">
                            <canvas id="userChart"></canvas>
                        </div>
                    </div>

                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">⚡ Son Aktiviteler</h3>
                        <div class="space-y-4 overflow-y-auto h-64 pr-2">
                            @if (Model.RecentActivities.Count == 0)
                            {
                                <p class="text-gray-400 text-sm text-center mt-10">Henüz aktivite yok.</p>
                            }
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="flex items-start space-x-3 pb-3 border-b border-gray-50 last:border-0">
                                    <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-xs font-bold flex-shrink-0">
                                        @(activity.Habit.User.Username.Substring(0, 1).ToUpper())
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-700">
                                            <span class="font-bold">@activity.Habit.User.Username</span>,
                                            <span class="text-indigo-600 font-medium">@activity.Habit.Name</span> görevini tamamladı.
                                        </p>
                                        <p class="text-xs text-gray-400 mt-0.5">
                                            <i class="fa-regular fa-clock mr-1"></i> @activity.CompletionDate.ToShortDateString()
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div id="tab-users" class="hidden animate-fade-in">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b border-gray-100 flex justify-between items-center">
                        <h3 class="text-lg font-bold text-gray-800">Kullanıcı Yönetimi</h3>
                        <a href="/Admin/CreateUser" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-semibold transition"><i class="fa-solid fa-plus mr-2"></i> Yeni Ekle</a>
                    </div>
                    <table class="w-full text-left">
                        <thead class="bg-gray-50 text-gray-500 text-xs uppercase">
                            <tr><th class="p-4">ID</th><th class="p-4">Kullanıcı</th><th class="p-4">Email</th><th class="p-4">Rol</th><th class="p-4 text-right">İşlemler</th></tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            @foreach (var user in Model.Users)
                            {
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="p-4 text-gray-500">#@user.UserID</td>
                                    <td class="p-4 font-semibold text-gray-700">@user.Username</td>
                                    <td class="p-4 text-gray-600 text-sm">@user.Email</td>
                                    <td class="p-4">
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="bg-purple-100 text-purple-700 px-2 py-1 rounded text-xs font-bold">ADMIN</span>
                                        }
                                        else
                                        {
                                            <span class="bg-blue-50 text-blue-600 px-2 py-1 rounded text-xs font-bold">USER</span>
                                        }
                                    </td>
                                    <td class="p-4 text-right flex justify-end space-x-2">
                                        <a href="/Admin/EditUser/@user.UserID" class="w-8 h-8 rounded-lg bg-yellow-50 text-yellow-600 flex items-center justify-center hover:bg-yellow-100 transition"><i class="fa-solid fa-pen"></i></a>
                                        @if (user.Role != "Admin" || user.Username != User.Identity.Name)
                                        {
                                            <form action="/Admin/DeleteUser/@user.UserID" method="post" onsubmit="return confirm('Silmek istediğine emin misin?');">
                                                <button class="w-8 h-8 rounded-lg bg-red-50 text-red-600 flex items-center justify-center hover:bg-red-100 transition"><i class="fa-solid fa-trash"></i></button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div id="tab-habits" class="hidden animate-fade-in">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b border-gray-100">
                        <h3 class="text-lg font-bold text-gray-800">Alışkanlık Yönetimi</h3>
                    </div>
                    <table class="w-full text-left">
                        <thead class="bg-gray-50 text-gray-500 text-xs uppercase">
                            <tr><th class="p-4">Alışkanlık</th><th class="p-4">Kategori</th><th class="p-4">Sahibi</th><th class="p-4">Tarih</th><th class="p-4 text-right">İşlem</th></tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            @foreach (var habit in Model.Habits)
                            {
                                <tr class="hover:bg-gray-50 transition">
                                    <td class="p-4 font-bold text-gray-800">@Html.Raw(habit.Name)</td>
                                    <td class="p-4"><span class="bg-indigo-50 text-indigo-600 px-2 py-1 rounded text-xs font-bold">@habit.Category</span></td>
                                    <td class="p-4">
                                        <div class="flex items-center space-x-2">
                                            <div class="w-6 h-6 bg-gray-200 rounded-full flex items-center justify-center text-xs font-bold text-gray-600">@(habit.User?.Username.Substring(0, 1).ToUpper() ?? "?")</div>
                                            <span class="text-sm">@(habit.User?.Username ?? "Bilinmiyor")</span>
                                        </div>
                                    </td>
                                    <td class="p-4 text-xs text-gray-500">@habit.CreationDate.ToShortDateString()</td>
                                    <td class="p-4 text-right">
                                        <form action="/Admin/DeleteHabit/@habit.HabitID" method="post" onsubmit="return confirm('Kalıcı olarak silinecek?');">
                                            <button class="text-red-500 hover:text-red-700 text-sm font-bold"><i class="fa-solid fa-trash mr-1"></i> Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function showTab(tabName) {
        document.getElementById('tab-dashboard').classList.add('hidden');
        document.getElementById('tab-users').classList.add('hidden');
        document.getElementById('tab-habits').classList.add('hidden');

        document.getElementById('tab-' + tabName).classList.remove('hidden');

        const btnDefault = "w-full flex items-center space-x-3 px-4 py-3 text-gray-400 hover:bg-gray-800 hover:text-white rounded-xl transition text-left";
        const btnActive = "w-full flex items-center space-x-3 px-4 py-3 bg-blue-600 rounded-xl text-white shadow-lg transition text-left";

        document.getElementById('btn-dashboard').className = btnDefault;
        document.getElementById('btn-users').className = btnDefault;
        document.getElementById('btn-habits').className = btnDefault;

        document.getElementById('btn-' + tabName).className = btnActive;
    }

    const ctx = document.getElementById('userChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
            datasets: [{
                label: 'Yeni Üye Sayısı',
                data: @Html.Raw(Json.Serialize(Model.ChartData)),
                backgroundColor: '#3b82f6',
                borderRadius: 5,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: { beginAtZero: true, ticks: { stepSize: 1 } }
            },
            plugins: { legend: { display: false } }
        }
    });
</script>