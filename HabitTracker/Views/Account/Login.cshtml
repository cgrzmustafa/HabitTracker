@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<script src="https://cdn.tailwindcss.com"></script>
<style>
    body {
        font-family: 'Poppins', sans-serif;
    }
</style>

<div class="min-h-screen bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 flex items-center justify-center p-4">

    <div class="bg-white/70 backdrop-blur-lg p-8 rounded-3xl shadow-2xl w-full max-w-md border border-white/50">

        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-800 tracking-tight">Hoş Geldin! 👋</h2>
            <p class="text-gray-500 text-sm mt-2">Devam etmek için giriş yap</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 mb-4 text-sm rounded">
                @ViewBag.Error
            </div>
        }

        <form method="post" action="/Account/Login" class="space-y-5">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email Adresi</label>
                <input type="email" name="email" required
                       class="w-full px-4 py-3 rounded-xl bg-white/50 border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
                       placeholder="ornek@email.com" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Şifre</label>
                <input type="password" name="password" required
                       class="w-full px-4 py-3 rounded-xl bg-white/50 border border-gray-200 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 outline-none transition-all"
                       placeholder="••••••" />
            </div>

            <button type="submit"
                    class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 rounded-xl shadow-lg transform transition hover:scale-[1.02] duration-200">
                Giriş Yap
            </button>
        </form>

        <p class="text-center text-sm text-gray-500 mt-6">
            Hesabın yok mu?
            <a href="/Account/Register" class="text-blue-600 font-semibold hover:underline">Kayıt Ol</a>
        </p>
    </div>
</div>